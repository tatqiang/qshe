create table public.form_templates (
  id uuid not null default gen_random_uuid (),
  code text not null,
  name_th text not null,
  name_en text not null,
  description text null,
  category text not null,
  icon text null,
  is_active boolean null default true,
  version integer null default 1,
  created_at timestamp with time zone null default now(),
  updated_at timestamp with time zone null default now(),
  created_by uuid null,
  updated_by uuid null,
  constraint form_templates_pkey primary key (id),
  constraint form_templates_code_key unique (code),
  constraint form_templates_created_by_fkey foreign KEY (created_by) references users (id),
  constraint form_templates_updated_by_fkey foreign KEY (updated_by) references users (id)
) TABLESPACE pg_default;

create trigger trigger_form_templates_updated_at BEFORE
update on form_templates for EACH row
execute FUNCTION update_updated_at ();