create table public.safety_audit_categories (
  id uuid not null default gen_random_uuid (),
  category_code character varying(10) not null,
  category_id character varying(20) not null,
  name_th text not null,
  name_en text null,
  description text null,
  display_order integer null default 0,
  is_active boolean null default true,
  created_at timestamp with time zone null default now(),
  updated_at timestamp with time zone null default now(),
  constraint safety_audit_categories_pkey primary key (id),
  constraint safety_audit_categories_category_code_key unique (category_code),
  constraint safety_audit_categories_category_id_key unique (category_id)
) TABLESPACE pg_default;

create index IF not exists idx_safety_audit_categories_code on public.safety_audit_categories using btree (category_code) TABLESPACE pg_default;

create index IF not exists idx_safety_audit_categories_active on public.safety_audit_categories using btree (is_active) TABLESPACE pg_default;