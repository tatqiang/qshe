create table public.projects (
  id uuid not null default gen_random_uuid (),
  name character varying not null,
  description text null,
  created_at timestamp with time zone null default now(),
  updated_at timestamp with time zone null default now(),
  project_code character varying(50) not null default ''::character varying,
  status public.project_status_enum not null default 'active'::project_status_enum,
  project_start date null,
  project_end date null,
  is_test_project boolean null default false,
  constraint projects_pkey primary key (id),
  constraint projects_project_code_key unique (project_code)
) TABLESPACE pg_default;

create index IF not exists idx_projects_project_code on public.projects using btree (project_code) TABLESPACE pg_default;

create index IF not exists idx_projects_status on public.projects using btree (status) TABLESPACE pg_default;

create index IF not exists idx_projects_start_date on public.projects using btree (project_start) TABLESPACE pg_default;

create index IF not exists idx_projects_end_date on public.projects using btree (project_end) TABLESPACE pg_default;